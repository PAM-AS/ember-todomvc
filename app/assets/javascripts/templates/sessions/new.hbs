<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <h1>Login</h1>

    <form role="form" {{action "loginUser" on="submit"}}>
      <div class="form-group">
        <label for="username-or-email">Username or Email</label>
        {{input type="text" id="username-or-email" class="form-control" value=username_or_email placeholder="Username or Email Address"}}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        {{input type="password" class="form-control" id="password" value=password placeholder="Password"}}
      </div>
      <button type="submit" class="btn btn-primary pull-right">Log in</button>
    </form>
  </div>
</div>
